<%= render 'users/new', user: @user, book: @book %>

    <%= notice %>
    <% if @book.errors.any? %>
      <p>error!!</p>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    <% end %>

    <h1>Book detail</h1>
        <div class="row">
            <div class="col-xs-1">
                <%= link_to user_path(@book_detail.user.id), class: 'link' do %>
                    <%= attachment_image_tag @book_detail.user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
                <% end %>
                <p><%= link_to @book_detail.user.name, user_path(@book_detail.user.id) %></p>
            </div>
            <div class="col-xs-1"></div>
            <div class="col-xs-10">
                <table class="table border-bottom">
                    <tr>
                        <td><%= @book_detail.title %></td>
                        <td><%= @book_detail.body %></td>
                    <% if @book_detail.user == current_user %>
                        <td><%= link_to "Edit", edit_book_path(@book_detail.id), class: "btn btn-success" %></td>
                        <td><%= link_to "Destroy", book_path(@book_detail.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に消しますか？" %></td>
                    <% end %>
                    </tr>
                </table>
            </div>
        </div>

		</div>
	</div>
</div>
