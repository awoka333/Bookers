<%= render 'users/new', user: @user, book: @book %>


        <%= notice %>
        <% if @book.errors.any? %>
          <p>error!!</p>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        <% end %>


        <h1>Books</h1>
        <table class="table border-bottom">
            <thead>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
            </thead>
            <% @books.each do |book| %>
                <tbody>
                    <td><%= attachment_image_tag book.user, :profile_image, size: '40x40', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %></td>
                    <td><%= link_to book.title, book_path(book.id) %></td>
                    <td><%= book.body %></td>
                </tbody>
            <% end %>
        </table>

		</div>
	</div>
</div>
